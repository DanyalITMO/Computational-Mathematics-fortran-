module Source_IO
  use Source_Process

   implicit none

contains
   ! Чтение исходного кода. 
!!!!!!!!!!!!!!!!!!!!in
subroutine input(INPUTFILE)
   integer :: i, j
	character(*),parameter :: ENC = "UTF-8"
	character(*), intent(in)      :: INPUTFILE
   integer  :: in

   open (file=INPUTFILE, encoding=ENC, newunit=in)
	do i = 1, 3
	   read(in, *) (a(i, j), j = 1, 3)
	end do
	close(in)

end subroutine  input


end module Source_IO 
